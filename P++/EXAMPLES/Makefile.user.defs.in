top_srcdir		= @top_srcdir@
srcdir	       		= @srcdir@
top_builddir   		= ..
CPPFLAGS		= @CPPFLAGS@
CC             		= @CC@
C_OPTIONS		= @C_OPTIONS@
CXX            		= @CXX@
CXX_DEBUG      		= @CXX_DEBUG@
CXX_OPT        		= @CXX_OPT@
CXX_OPTIONS    		= @CXX_OPTIONS@
CXX_DL_COMPILE_FLAGS	= @CXX_DL_COMPILE_FLAGS@
C_DEBUG        		= @C_DEBUG@
C_OPT          		= @C_OPT@
C_DL_COMPILE_FLAGS	= @C_DL_COMPILE_FLAGS@
MPIINCLUDE     		= @MPIINCLUDE@
MPILIBDIRS     		= @MPILIBDIRS@
MPILIBS        		= @MPILIBS@
INCLUDES       		= @INCLUDES@
DEFS           		= @DEFS@
CXXLD			= @CXXLD@
CCLD			= $(CC)
CXXFLAGS		= @RUNTIME_LOADER_FLAGS@ $(CXX_DEBUG) $(CXX_DEFINES) $(CXX_OPTIONS) $(CXX_WARNINGS) $(CXX_OPT)
CFLAGS			= @CFLAGS@ $(C_DEBUG) $(C_OPTIONS) $(C_OPT) $(C_WARNINGS) $(C_DL_COMPILE_FLAGS)
LDFLAGS        		= @LDFLAGS@
LIBS			= @LIBS@
LDADD			= $(PPP_PATH_TO_SHARED_LIB) $(PXX_RPATH)
PPP_PATH_TO_SHARED_LIB	= -L$(top_srcdir)/lib/lib
PXX_RPATH		= @PXX_RPATH@


CXXCOMPILE = $(CXX) $(DEFS) $(INCLUDES) $(AM_CPPFLAGS) $(CPPFLAGS) $(AM_CXXFLAGS) $(CXXFLAGS)
COMPILE = $(CC) $(DEFS) $(INCLUDES) $(AM_CPPFLAGS) $(CPPFLAGS) $(AM_CFLAGS) $(CFLAGS)

LINK = $(CCLD) $(AM_CFLAGS) $(CFLAGS) $(LDFLAGS) -o $@
CXXLINK = $(CXXLD) $(AM_CXXFLAGS) $(CXXFLAGS) $(LDFLAGS) $(LDADD) -o $@

